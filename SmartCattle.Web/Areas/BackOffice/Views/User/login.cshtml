<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <!-- App Favicon -->
    <link rel="shortcut icon" href="~/Areas/BackOffice/assets//images/favicon.ico">

    <!-- App title -->
    <title>Adminto - Responsive Admin Dashboard Template</title>

    <!-- App CSS -->
    <link href="~/Areas/BackOffice/assets//css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/BackOffice/assets//css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/BackOffice/assets//css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/BackOffice/assets//css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/BackOffice/assets//css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/BackOffice/assets//css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/BackOffice/assets//css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <script src="~/Areas/BackOffice/assets//js/modernizr.min.js"></script>

</head>
<body>

    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class="text-center">
            <a href="index.html" class="logo"><span>Smart<span>Cattle</span></span></a>
            <h5 class="text-muted m-t-0 font-600">Back Office Panel</h5>
        </div>
        <div class="m-t-40 card-box">
            <div class="text-center">
                <h4 class="text-uppercase font-bold m-b-0">Sign In</h4>
            </div>
            <div class="panel-body">
                <form class="form-horizontal m-t-20" action="@Url.Action("Login")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input name="username" class="form-control" type="text" required="" placeholder="Username">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <input name="password" class="form-control" type="password" required="" placeholder="Password">
                        </div>
                    </div>

                     

                    <div class="form-group text-center m-t-30">
                        <div class="col-xs-12">
                            <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>

                    <div class="form-group m-t-30 m-b-0">
                        <div class="col-sm-12">
                            <a href="page-recoverpw.html" class="text-muted"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <!-- end card-box-->
        <b class="red"> ViewBag.msg </b>
        

    </div>
    <!-- end wrapper page -->



    <script>
            var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/Areas/BackOffice/assets//js/jquery.min.js"></script>
    <script src="~/Areas/BackOffice/assets//js/bootstrap-rtl.min.js"></script>
    <script src="~/Areas/BackOffice/assets//js/detect.js"></script>
    <script src="~/Areas/BackOffice/assets//js/fastclick.js"></script>
    <script src="~/Areas/BackOffice/assets//js/jquery.slimscroll.js"></script>
    <script src="~/Areas/BackOffice/assets//js/jquery.blockUI.js"></script>
    <script src="~/Areas/BackOffice/assets//js/waves.js"></script>
    <script src="~/Areas/BackOffice/assets//js/wow.min.js"></script>
    <script src="~/Areas/BackOffice/assets//js/jquery.nicescroll.js"></script>
    <script src="~/Areas/BackOffice/assets//js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/Areas/BackOffice/assets//js/jquery.core.js"></script>
    <script src="~/Areas/BackOffice/assets//js/jquery.app.js"></script>

</body>
</html>