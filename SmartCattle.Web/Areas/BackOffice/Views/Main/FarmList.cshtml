@using SmartCattle.Web.Areas.BackOffice.Models
@model FarmListModel
@{
    ViewBag.Title = "FarmList";
    Layout = "~/Areas/BackOffice/Views/Shared/_AdminLayout.cshtml";
}

<h2>FarmList</h2>

<div class="row">
    <div class="col-sm-10 col-lg-offset-1" style="margin-top:20px">
        <div class="panel">
            <div class="panel-body">
                <div class="editable-responsive">
                    <div id="datatable-editable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="col-sm-12">
                            <table class="table table-striped dataTable no-footer" id="datatable-editable" role="grid" aria-describedby="datatable-editable_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" rowspan="1" colspan="1" aria-sort="ascending" style="width: 233px;">Farm Name</th>
                                        <th class="sorting_asc" tabindex="0" rowspan="1" colspan="1" aria-sort="ascending" style="width: 233px;">Longitude</th>
                                        <th class="sorting_asc" tabindex="0" rowspan="1" colspan="1" aria-sort="ascending" style="width: 233px;">Latitude</th>
                                        <th class="sorting" tabindex="0" rowspan="1" colspan="1" style="width: 220px;">Sensor Count</th>
                                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 121px;">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var farm in Model.Farms)
                                        {
                                            <tr role="row" class="adding odd">
                                                <td> @farm.name</td>
                                                <td> @farm.Longitude</td>
                                                <td> @farm.Latitude</td>
                                               
                                                @foreach (var farmsensor in @Model.FarmSensors)
                                                {
                                                    if (farmsensor.Key == farm.ID)
                                                    {
                                                        
                                                        <td>@farmsensor.Count()</td>                                                       
                                                    }
           
                                                }
                                                
                                                <td> <i onclick="removePremission(@farm.ID, this)" class="fa fa-trash" style="color: #ff0000; padding: 5px; cursor: pointer"></i> </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- end: panel body -->
    </div> <!-- end panel -->
</div> <!-- end col-->
