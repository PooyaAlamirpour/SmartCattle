@using SmartCattle.DomainClass
    @model List<RolePermission>

<div class="row" >
    <div class="col-sm-10 col-lg-offset-1" style="margin-top:20px">
        <div class="panel">
            <div class="panel-body">
                <div class="editable-responsive">
                    <div id="datatable-editable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                             <div class="col-sm-12">
                                <table class="table table-striped dataTable no-footer" id="datatable-editable" role="grid" aria-describedby="datatable-editable_info">
                                    <thead>
                                        <tr role="row">
                                        <th class="sorting_asc" tabindex="0" rowspan="1" colspan="1"  aria-sort="ascending" style="width: 233px;">Title</th>
                                        <th class="sorting" tabindex="0"  rowspan="1" colspan="1"  style="width: 306px;">Controller</th>
                                        <th class="sorting" tabindex="0"  rowspan="1" colspan="1" style="width: 281px;">Action</th>
                                            <th class="sorting" tabindex="0" rowspan="1" colspan="1" style="width: 281px;">Read</th>
                                            <th class="sorting" tabindex="0" rowspan="1" colspan="1" style="width: 281px;">Write</th>
                                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 121px;">Delete</th></tr>
                                    </thead>
                                    <tbody>
                                       @foreach (var item in Model)
                                       {
                                        <tr role="row" class="adding odd">
                                        <td> @item.Title</td>
                                        <td> @item.Controller </td>
                                        <td> @item.Action </td>
                                        <td> @item.Read </td>
                                        <td> @item.Write </td>
                                        <td> <i onclick="removePremission(@item.ID,this)" class="fa fa-trash" style="color:#ff0000; padding:5px; cursor:pointer"></i>  </td>
                                        </tr>
                                       }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end: panel body -->
        </div> <!-- end panel -->
    </div> <!-- end col-->